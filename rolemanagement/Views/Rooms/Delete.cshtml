@model rolemanagement.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<h1>Room</h1>

<h3>Confirm your check out.</h3>
<div>
    <h4>Check Out</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberofBeds)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberofBeds)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomNumber" />
        <input type="submit" value="Check Out" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"/> 
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>
